{
  "name": "AI Coder Dev Container",
  "dockerComposeFile": "compose.yml",
  "service": "cli-devcontainer",
  "runServices": ["cli-devcontainer"],
  "workspaceFolder": "/mnt/host",
  "remoteUser": "vscode",
  "remoteEnv": {
    "PYTHONPATH": "/mnt/host"
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "zsh"
  },
  "extensions": [
    "ms-python.python",
    "ms-azuretools.vscode-docker"
  ],
  "postStartCommand": "git config --global --add safe.directory /mnt/host",
  "postCreateCommand": "zsh -l",
  "customize": {
    "memoryLimit": 8192
  }
}
